{
	"name": "Inject sidebar",
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.1",
	"background_page": "background.html",
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Inject sidebar"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["script.js"]
		}
	],
	"permissions": [
		"tabs"
	]
}